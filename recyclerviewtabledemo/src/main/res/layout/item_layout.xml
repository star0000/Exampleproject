<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/blue_press_selector">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_head_view"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/id_name"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="名称"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_move_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id_tv_price_last"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="最新价"/>

            <TextView
                android:id="@+id/id_tv_rise_rate24"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="涨幅"/>

            <TextView
                android:id="@+id/id_tv_vol24"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="成交量"/>

            <TextView
                android:id="@+id/id_tv_close"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="收盘价"/>

            <TextView
                android:id="@+id/id_tv_open"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="开盘价"/>

            <TextView
                android:id="@+id/id_tv_bid"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="买一价"/>

            <TextView
                android:id="@+id/id_tv_ask"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="卖一价"/>

            <TextView
                android:id="@+id/id_tv_percent"
                android:layout_width="60dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:textColor="@color/text_selected_white"
                android:textSize="12sp"
                tools:text="量比"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/id_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorHint"/>

</RelativeLayout>